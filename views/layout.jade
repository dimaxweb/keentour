doctype 5
html(lang='en')
   head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='stylesheet', href='/stylesheets/Site.css')
    link(rel='stylesheet', href='/stylesheets/colorbox.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
    link(rel='icon',type='image/png',href='/images/favicon.ico')


   body

        .container.header
               .row-fluid
                .span4
                   div.logoCont.pull-left
                    a(href='/', title='Keentour-Home')
                       img(src='/images/logo.png')
                .span8
                    #search
                        input#searchtext(type='text', onfocus='if(this.value==\'search...\') this.value=\'\';', onblur='if(!this.value) this.value=\'search...\';', value='search...')
                        input#searchbtn(type='button', value='')

        .container-fluid.menu
           .container.menu
               table.top_menu
                   tr
                       td
                           .top_menu1(rel='EU')
                              div
                                a(href='/content/Europe') Europe
                       td
                           .top_menu1(rel='SA')
                               div
                                    a(href='/content/South-America') South America
                       td
                           .top_menu1(rel='NA')
                               div
                                   a(href='/content/North-America') North America
                       td
                           .top_menu1(rel='AS')
                               div
                                   a(href='/content/Asia') Asia
                       td
                           .top_menu1(rel='OC')
                               div
                                   a(href='/content/Oceania') Oceania
                       td
                           .top_menu1(rel='AF')
                               div
                                   a(href='/content/Africa') Africa

       .container
            block content

            div.footerPanel#panelMain
                div.panelInternal
                    div.addthis_toolbox.addthis_default_style.addthis_32x32_style
                        a(class="addthis_button_preferred_1")
                        a(class="addthis_button_preferred_2")
                        a(class="addthis_button_preferred_3")
                        a(class="addthis_button_compact")
                        a(class="addthis_counter addthis_bubble_style")
                        span.companyInfo
                            a(href="/AboutUs") About US
                        span.companyInfo
                            a(href="/Privacy") Privacy




