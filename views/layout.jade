include shared/mixins

doctype 5
html(lang='en')
   head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='stylesheet', href='/stylesheets/Site.css')
    link(rel='stylesheet', href='/stylesheets/colorbox.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-responsive.css')
    link(rel='icon',type='image/png',href='/images/favicon.ico')
    script(type='text/javascript',src='/javascripts/console.js')

   body

           .container-fluid.header
                   .row-fluid
                    .span2
                       div.logoCont
                        a(href='/', title='Keentour-Home')
                           img(src='/images/logo_new.png')
                    .span10
                        .headerNav
                            ul.nav.nav-pills
                                li
                                    input#searchtext(type='text', onfocus='if(this.value==\'Start explore...\') this.value=\'\';', onblur='if(!this.value) this.value=\'Start explore...\';', value='Start explore...')
                                    input#searchbtn(type='button', value='')
                                li.active
                                    a.createStory(href='/story') Crete Story
                                if isAuthenticated
                                    li.dropdown
                                        a#drop4.dropdown-toggle(role='button', data-toggle='dropdown', href='#')
                                            |  #{user.username}
                                            b.caret
                                        ul#menu1.dropdown-menu(role='menu', aria-labelledby='drop4')
                                            li(role='presentation')
                                                a(role='menuitem', tabindex='-1', href='#')

                                            li(role='presentation')
                                                a(role='menuitem', tabindex='-1', href='#{user.storiesUrl}') My Stories
                                            li.divider(role='presentation')
                                            li(role='presentation')
                                                a(role='menuitem', tabindex='-1', href='/logout') Logout
                                else
                                    li.active
                                        a#loginBtn(href='/login') Login




           .container-fuild

               block content


           div.footerPanel#panelMain
                span.companyInfo
                    a(href="/AboutUs") About US
                span.companyInfo
                   a(href="/Privacy") Privacy

                span.copyr Copyright © 2013, Keentour.com


               script(type='text/javascript')
                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', 'UA-10410520-2']);
