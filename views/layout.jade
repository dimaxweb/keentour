                })();


           .modal.hide.fade
               .modal-dialog
                   .modal-content
                       .modal-header
                           button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                           h4.modal-title Login to Keentour
                           .modal-body
                               a.facebookAuth(href='/auth/facebook')
                                    span Login with Facebook




