extends layoutnew
include shared/mixins

block content
    .actionPanel
    .raw-fluid.contentSearch
            .span4
                input(type='text',id='searchText',style='width:95%',value="Jerusalem")

                #photoPaging
                .photos


        .span8
            ul#storyTabs.nav.nav-tabs
                li.active
                    a.tab(href='#story',data-toggle="tab") Story
                li
                    a.tab(href='#settings',data-toggle="tab") Settings



            .tab-content
                .story#story.tab-pane.active
                        div(style='text-align:left')
                            input(type='text',id='txtTitle',placeholder='Enter title',style='width:95%'")
                            .storyText
                            textarea#wysihtml5-editor(spellcheck='false', wrap='off', autofocus='autofocus', placeholder='Enter description ...')

                        .storyItemsCont
                            ul.storyItems
                #settings.tab-pane
                    h4 Geo Location
                    input(type="text",id="geoLocation",placeholder="Where it happens ?")
                    .geoPath

                    .inrerestsCont
                        h4 Point of interest
                        ul.interests
                            li
                                .interest
                                    input(type="checkbox",value="Family",name="Family")
                                    label.checkbox.inline Family
                            li
                                .interest
                                    input(type="checkbox",value="Nature",name="Nature")
                                    label.checkbox.inline Nature
                                .interest
                                    input(type="checkbox",value="Nightlife",name="Nightlife")
                                    label.checkbox.inline Nightlife
                                .interest
                                    input(type="checkbox",value="Adventure",name="Adventure")
                                    label.checkbox.inline Adventure
                                .interest
                                    input(type="checkbox",value="History",name="History")
                                    label.checkbox.inline History
                                .interest
                                    input(type="checkbox",value="Culture",name="Culture")
                                    label.checkbox.inline Culture


                        h4 Web Site
                        input#webSiteUrl



       script
            var story = !{JSON.stringify(story)};
            if(typeof(KEENTOUR)==="undefined"){KEENTOUR={};}
            KEENTOUR.currentStory= story;

       mixin mainInclude('story.js')


