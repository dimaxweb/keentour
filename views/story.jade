extends  layout
block content
    .search
        input.searchtext(type='text')
    .tabs
        span.widgetTitle.selected(rel="videos")
        a(rel="videos")
            img(src="/images/kamera.png")
        a.tabTitle(rel="videos") Videos
        span.widgetTitle(rel="photos")
            a(rel="photos")
                img(src="/images/photokamera.png")
            a.tabTitle(rel="photos") Photos
        span.widgetTitle(rel="article")
        a(rel="article")
            img(src="/images/wikipedia.png")
        a.tabTitle(rel="article") Wikipedia

    #widgetDisplay

    script(data-main="/#{locals.scriptPrefix}/stories/story",src="/javascripts/lib/require.js",type="text/javascript")


